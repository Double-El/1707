   "source": [
    "# make a guess the number\n",
    "import random\n",
    "\n",
    "n = random.randint(1, 100)\n",
    "\n",
    "while True:\n",
    "    x = input(\"guess the number. \")\n",
    "    guess = int(x)\n",
    "    \n",
    "    if guess == n:\n",
    "        print(\"correct\")\n",
    "        break\n",
    "    if guess < n:\n",
    "        print(\"up\")\n",
    "        \n",
    "    if guess > n:\n",
    "        print(\"down\")"
   ]
  }
